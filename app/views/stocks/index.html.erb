<h1>在庫チェック</h1>

<% if @stocks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>商品名</th>
      </tr>
    </thead>
    <tbody>
      <% @stocks.each do |stock| %>
        <tr>
          <td><%= link_to stock.id, stock %></td>
          <td><%= stock.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


<%= link_to 'TOPに戻る', root_path, class: 'btn btn-default' %>


